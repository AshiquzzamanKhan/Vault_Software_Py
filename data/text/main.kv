# screen general
<PluginsScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: C('#BAC437')
            Rectangle:
                pos: self.pos
                size: self.size

        # section + content
        RelativeLayout:
            id: tab_screen_content_id
            pos_hint: {"right": 1, "y": 0}
            size_hint: 0.95, 1
            canvas:
                Color:
                    rgb: C('#AAAAAA')
                Rectangle:
                    pos: self.pos
                    size: self.size

        # tabs
        FloatLayout:
            id: screen_sidebar_id
            pos_hint: {"x": 0, "top": 1}
            size_hint: 0.05, 1
            canvas:
                Color:
                    rgb: C('#222222')
                Rectangle:
                    pos: self.pos
                    size: self.size

